{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "noPropertyAccessFromIndexSignature": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "paths": {
      "Lib/*": [
        "./src/Lib/*"
      ],
      "Utils/*": [
        "./src/Utils/*"
      ],
      "Logic/*": [
        "./src/Logic/*"
      ],
      "Api/*": [
        "./src/Api/*"
      ],
      "Config/*": [
        "./src/Config/*"
      ],
      "Helpers/*": [
        "./src/Helpers/*"
      ],
      "Exceptions/*": [
        "./src/Exceptions/*"
      ],
      "Entities/*": [
        "./src/Entities/*"
      ],
      "Templates/*": [
        "./src/Templates/*"
      ]
    },
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./types/"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
